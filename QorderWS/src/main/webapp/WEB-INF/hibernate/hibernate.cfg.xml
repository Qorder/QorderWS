<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://83.212.125.152:3306/tl</property>
		<property name="connection.username">hibernate</property>
		<property name="connection.password">sleep</property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">1</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">true</property>

		<property name="hbm2ddl.auto">create</property>

		<mapping class="com.qorder.qorderws.model.order.Order" />
		<mapping class="com.qorder.qorderws.model.order.ProductHolder" />
		<mapping class="com.qorder.qorderws.model.product.Product" />
		<mapping class="com.qorder.qorderws.model.category.ProductCategory" />
		<mapping class="com.qorder.qorderws.model.business.Business" />

	</session-factory>
</hibernate-configuration>
